
<%= form_for tag, remote: true do |form| %>
 <div class="modal-body">
    <div class="form-group mt-3">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
    </div>
   
      <div class="modal-footer">
      <%= form.submit "Create Note", class: "btn btn-primary btn-lg close-modal" %>
      <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>
      </div>
  </div>
<% end %>


