<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                </div>

                  <p>Please signup to your account</p>

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "users/shared/error_messages", resource: resource %>
                    
                    <div class="form-outline mb-4">
                      <%= f.label :name, class: "form-label", for: "form2Example11" %><br />
                      <%= f.text_field :name, autofocus: true, id: "form2Example11", class: "form-control"%>
                    </div>

                    <div class="form-outline mb-4">
                      <%= f.label :email, class: "form-label", for: "form2Example11" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form2Example11", class: "form-control" %>
                    </div>

                    <div class="form-outline mb-4">
                      <%= f.label :password, class: "form-label", for: "form2Example22" %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password",type: "password", id: "form2Example22", class: "form-control"  %>
                    </div>

                    <div class="form-outline mb-4">
                      <%= f.label :password_confirmation, class: "form-label", for: "form2Example22" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", id: "form2Example22", class: "form-control"  %>
                    </div>
                    

                    <div class="text-center pt-1 mb-5 pb-1 actions">
                        <%= f.submit "Sign up", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
                    </div>
                  
                  <% end %>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







